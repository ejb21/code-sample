<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="Paint" Height="500" Width="525" Background="Black">
    <Grid>
        <InkCanvas x:Name="canvas" Margin="10,10,10,75"/>
        <Button x:Name="clear" Content="Clear" Click="clear_Click" HorizontalAlignment="Left" Margin="164,402,0,0" VerticalAlignment="Top" Width="182" Height="57" FontSize="30"/>
        <Button x:Name="close" Content="Close" Click="close_Click" HorizontalAlignment="Left" Margin="351,402,0,0" VerticalAlignment="Top" Width="156" Height="57" FontSize="30"/>
        <Button x:Name="save" Content="Save" Click="save_Click" HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top" Width="149" Height="57" FontSize="30"/>
    </Grid>
</Window>
