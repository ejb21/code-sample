<Window x:Class="PeronsalInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeronsalInfo"
        mc:Ignorable="d"
        Title="Personal Info" Height="171" Width="250">
    <Grid>
        <Label x:Name="fname" Content="First Name" HorizontalAlignment="Left" Margin="15,18,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lname" Content="Last Name" HorizontalAlignment="Left" Margin="132,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="fnamein" HorizontalAlignment="Left" Height="23" Margin="15,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="97"/>
        <TextBox x:Name="lnamein" HorizontalAlignment="Left" Height="23" Margin="132,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="97"/>
        <Button x:Name="submit" Content="Submit" Click="submit_Click" HorizontalAlignment="Left" Margin="26,94,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="close" Content="Close" Click="close_Click" HorizontalAlignment="Left" Margin="143,94,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
